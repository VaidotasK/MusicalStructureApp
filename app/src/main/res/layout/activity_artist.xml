<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.android.musicalstructureapp.NowPlayingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/artist_back_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:src="@drawable/icon_arrow_back_48px" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            tools:text="Name of artist" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/artist_ArtWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/artist_album_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/artist_ArtWork"
            android:paddingLeft="8dp"
            android:textSize="24sp"
            tools:text="Album" />

        <RelativeLayout
            android:id="@+id/artist_song_list_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/artist_ArtWork"
            android:layout_toRightOf="@id/artist_ArtWork"
            android:paddingLeft="8dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/artist_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Song Title" />


        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>